{{if .errors}}
  <div class="alert alert-danger">
    Error while creating post
    <ul>
      {{range .errors}}
        <li>{{.FieldNames}} {{.Message}}</li>
      {{end}}
    </ul>
  </div>
{{end}}
<h3>Register Device</h3>
<hr/>
<div class="col-md-6 col-md-offset-2">
<form class="form-horizontal" role="form" method="post" action="/devices">
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="name" id="name" placeholder="Device Name">
    </div>
  </div>
  <div class="form-group">
    <label for="os" class="col-sm-2 control-label">Platform</label>
    <div class="col-sm-10">
		  <label class="radio-inline">
		    <input type="radio" name="os" id="ios" value="ios" checked>
		    iOS
		  </label>
		  <label class="radio-inline">
		    <input type="radio" name="os" id="android" value="android">
		    Android
		  </label>
    </div>
  </div>
  <div class="form-group">
    <label for="type" class="col-sm-2 control-label">Device Type</label>
    <div class="col-sm-10">
		  <label class="radio-inline">
		    <input type="radio" name="type" id="mobile" value="mobile" checked>
		    Mobile
		  </label>
		  <label class="radio-inline">
		    <input type="radio" name="type" id="tablet" value="tablet">
		    Tablet
		  </label>
       <label class="radio-inline">
        <input type="radio" name="type" id="emulator" value="emulator">
        Emulator
      </label>
    </div>
  </div>
   <div class="form-group">
    <label for="os_version" class="col-sm-2 control-label">OS Version</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="os_version" id="os_version" placeholder="OS Version">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Create</button>
      <a href="/devices" class="btn btn-danger">Cancel</a>
    </div>
  </div>
</form>
</div>
