<h3>Devices</h3>
<div class="row">
	<span class="pull-right"><a href="/devices/new"><i class="fa fa-plus-square-o"></i> New Device</a></span>
</div>
<div class="table-responsive">
	<table class="table table-condensed">
	<thead>
		<tr>
			<th>Device</th>
			<th>Type</th>
			<th>Platform</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
	{{range .devices}}
	<tr>
		<td>{{.Name}}</td>
		<td>{{.Type}}</td>
		<td>{{.OS}}</td>
		<td>{{.Status}}</td>
	</tr>
	{{end}}
	</tbody>
	</table>
</div>